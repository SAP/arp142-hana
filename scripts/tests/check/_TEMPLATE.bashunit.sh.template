#!/usr/bin/env bash
#------------------------------------------------------------------
# bashunit test template for check functions
#
# Usage: cp _TEMPLATE.bashunit.sh.template NNNN_check_name.bashunit.sh
#        Then replace NNNN_check_name with your actual check name
#------------------------------------------------------------------
set -u  # treat unset variables as an error

if [[ -z "${PROGRAM_DIR:-}" ]]; then
    PROGRAM_DIR="${BASH_SOURCE[0]%/*}"
    [[ "$PROGRAM_DIR" == "${BASH_SOURCE[0]}" ]] && PROGRAM_DIR="."
fi

# CRITICAL: Use a test-specific guard variable!
# Do NOT use HANA_HELPER_PROGVERSION - it breaks other tests
[[ -n "${_NNNN_check_name_test_loaded:-}" ]] && return 0
_NNNN_check_name_test_loaded=true

# Mock variables - add TEST_ variables that your check uses
TEST_EXAMPLE_VALUE=''

# Mock functions - define functions your check calls
# These are reset in set_up() for each test
LIB_FUNC_IS_RHEL() { return 1; }
LIB_FUNC_IS_SLES() { return 0; }

function set_up_before_script() {
    # Disable errexit - bashunit enables it but sourced files may return non-zero
    set +eE

    #shellcheck source=../saphana-logger-stubs
    source "${PROGRAM_DIR}/../saphana-logger-stubs"

    # IMPORTANT: Do NOT source saphana-helper-funcs here!
    # Mock the functions you need instead (see above)

    #shellcheck source=../../lib/check/NNNN_check_name.check
    source "${PROGRAM_DIR}/../../lib/check/NNNN_check_name.check"
}

function set_up() {
    # Reset mock variables before each test
    TEST_EXAMPLE_VALUE=''

    # Reset mock functions to default behavior
    LIB_FUNC_IS_RHEL() { return 1; }
    LIB_FUNC_IS_SLES() { return 0; }
}

# Example test: check skipped when precondition not met
function test_precondition_not_met() {
    #arrange
    # Set up conditions that should cause the check to skip

    #act
    check_NNNN_check_name

    #assert
    if [[ $? -ne 3 ]]; then
        bashunit::fail "Expected RC=3 (skipped) when precondition not met"
    fi
}

# Example test: check passes with correct values
function test_correct_values() {
    #arrange
    TEST_EXAMPLE_VALUE='expected_value'

    #act
    check_NNNN_check_name

    #assert
    if [[ $? -ne 0 ]]; then
        bashunit::fail "Expected RC=0 (ok) for correct values"
    fi
}

# Example test: check fails with incorrect values
function test_incorrect_values() {
    #arrange
    TEST_EXAMPLE_VALUE='wrong_value'

    #act
    check_NNNN_check_name

    #assert
    if [[ $? -ne 2 ]]; then
        bashunit::fail "Expected RC=2 (error) for incorrect values"
    fi
}

# Example test: RHEL-specific behavior
function test_rhel_specific() {
    #arrange
    LIB_FUNC_IS_RHEL() { return 0; }  # Mock as RHEL
    LIB_FUNC_IS_SLES() { return 1; }
    TEST_EXAMPLE_VALUE='rhel_value'

    #act
    check_NNNN_check_name

    #assert
    if [[ $? -ne 0 ]]; then
        bashunit::fail "Expected RC=0 (ok) for RHEL with correct value"
    fi
}
